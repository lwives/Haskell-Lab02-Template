{
    "name": "Haskell Environment",
    "image": "haskell:9.6",
    "features": {
        "ghcr.io/devcontainers/features/haskell:1": {
            "ghcVersion": "9.6",
            "cabalVersion": "3.10",
            "cabalInstallVersion": "3.10"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "haskell.haskell",
                "justusadam.language-haskell",
                "haskell-dev.haskell-code-explorer"
            ],
            "settings": {
                "haskell.ghc.arguments": [
                    "-package", "HUnit"
                ]
            }
        }
    }
}
